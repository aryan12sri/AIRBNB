<% layout("layouts/boilerplate.ejs") %>

<body>

    
        <div class="row mt-3">
        <div class="col-7  offset-3">

            <h3>Edit your Listing </h3>

            <form action="/listing/<%=list._id%>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>

                <div class="mb-3">
                  <label for="title" class="form-label">TITLE</label>
                  <input type="text" name="list[title]"  placeholder="write title" class="form-control" value="<%= list.title %>" required>
                 </div>
              
              <div class="mb-3">
                  <label for="description" class="form-label">DESCRIPTION</label>
                  <textarea name="list[description]" class="form-control" required><%= list.description %></textarea>
              </div>

              <div>
                <img src="<%=originalImage%>" alt="no image" style="height: 200px;">
              </div>

              <div class="mb-3 ">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="list[image]"  placeholder="Enter URL" class="form-control" value="<%=list.image%>"  >
              </div>

        
              <div class="mb-3">
                  <label for="price" class="form-label">PRICE</label>
                  <input type="number" name="list[price]"  placeholder="write title" class="form-control" value="<%=list.price %>" required>
              </div>
             
              <div class="row">
        
                  <div class="mb-3 col-6">
                      <label for="location" class="form-label">LOCATION</label>
                      <input type="text" name="list[location]"  placeholder="write title" class="form-control" value="<%= list.location %>" required>
                   </div>
          
                  <div class="mb-3 col-6">
                      <label for="country" class="form-label">COUNTRY</label>
                      <input type="text" name="list[country]"  placeholder="write title" class="form-control" value="<%= list.country %>" required >
                  </div>
          
              </div>
            <button class=" btn btn-primary mt-3 mb-4">EDIT</button>
        </form>  
    </div>
    </div>

  
</body>
